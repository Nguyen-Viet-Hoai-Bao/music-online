doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= t('title')
    link(rel="stylesheet", href="/stylesheets/bootstrap.min.css")
    script(src="/scripts/jquery.min.js")
    script(src="/scripts/popper.min.js")
    script(src="/scripts/bootstrap.min.js")
    link(rel="stylesheet", href="styles/custom_homepage.css")
    link(rel="stylesheet", href="/stylesheets/all.min.css")

  body
    nav.navbar.navbar-dark
      a.navbar-brand(href="#")= t('navbar.brand')
      div.navbar-right
        button.btn.btn-login(type="button")= t('navbar.login')
        span.language-selector
          a(href="/change-language/en")= t('navbar.language.english')
          | |
          a(href="/change-language/vi")= t('navbar.language.vietnamese')

    .main-content
      .sidebar
        ul.nav.flex-column
          li.nav-item.active
            a.nav-link(href="#")
              i.fas.fa-home
              = t('sidebar.home')
              span.sr-only (current)
          li.nav-item
            a.nav-link(href="#")
              i.fas.fa-search
              = t('sidebar.search')
          li.nav-item
            a.nav-link(href="#")
              i.fas.fa-book
              = t('sidebar.library')
          li.nav-item.divider
            hr
          li.nav-item
            a.nav-link(href="#")
              i.fas.fa-plus
              = t('sidebar.create_playlist')
          li.nav-item
            a.nav-link(href="#")
              i.fas.fa-heart
              = t('sidebar.liked_song')
      .content
        .container
          h1.text-center.mb-4= t('content.discover_new_music')
          .row
            each track in tracks
              .col-md-3.mb-4
                .card
                  img.card-img-top(src=track.image, alt=track.title)
                  .card-body
                    h5.card-title= track.title
                    p.card-text= t('content.artist', { artist: track.artist })
                    a.btn.btn-primary(href="#")= t('content.play')