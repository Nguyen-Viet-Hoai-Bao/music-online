extends ../layout

block content
  .container(style='background-color: #f8f9fa; color: #1db954; padding: 2rem;')
    h1 Create Genre
    form(action='/genres/create', method='post')
      div.form-group
        label(for='name') Name Genre
        input.form-control(id='name', type='text', name='name', required)
      div
        button.btn.btn-primary(type='submit') Create Genre
