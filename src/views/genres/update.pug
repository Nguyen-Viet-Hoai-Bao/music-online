extends ../layout

block content
  .container(style='background-color: #f8f9fa; color: #1db954; padding: 2rem;')
    h1 Update Genre
    form(action=`/genres/update/${genre.id}`, method='post')
      div.form-group
        label(for='name') Name
        input.form-control(id='name', type='text', name='name', value=genre.name, required)
      div
        button.btn.btn-primary(type='submit') Update Genre
