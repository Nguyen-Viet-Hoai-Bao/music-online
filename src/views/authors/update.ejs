<!DOCTYPE html>
<html>
<head>
  <title>Update Author</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <h1>Update Author</h1>
  <form action="/authors/update/<%= author.id %>" method="post" enctype="multipart/form-data">
    <div>
      <label for="fullname">Full Name</label>
      <input id="fullname" type="text" name="fullname" value="<%= author.fullname %>" required>
    </div>
    <div>
      <label for="avatar">Avatar</label>
      <input id="avatar" type="file" name="avatar">
      <% if (author.avatar) { %>
        <img src="<%= author.avatar %>" alt="Current Avatar" width="100">
      <% } %>
    </div>
    <div>
      <label for="dateOfBirth">Date of Birth</label>
      <input id="dateOfBirth" type="date" name="dateOfBirth" value="<%= author.dateOfBirth.toISOString().split('T')[0] %>" required>
    </div>
    <div>
      <button type="submit">Update Author</button>
    </div>
  </form>
</body>
</html>
