extends ../layout

block content
  .container(style='background-color: #f8f9fa; color: #1db954; padding: 2rem;')
    h1 Update Author
    form(action=`/authors/update/${author.id}`, method='post', enctype='multipart/form-data')
      div.form-group
        label(for='fullname') Full Name
        input.form-control(id='fullname', type='text', name='fullname', value=author.fullname, required)
      div.form-group
        label(for='avatar') Avatar
        input.form-control-file(id='avatar', type='file', name='avatar')
        if author.avatar
          img(src=author.avatar, alt='Current Avatar', width='100')
      div.form-group
        label(for='dateOfBirth') Date of Birth
        input.form-control(id='dateOfBirth', type='date', name='dateOfBirth', value=author.dateOfBirth.toISOString().split('T')[0], required)
      div
        button.btn.btn-primary(type='submit') Update Author
